<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".di.menu.menuPageActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="146dp"
        android:elevation="2dp"
        android:src="@drawable/calistung"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="145dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="136dp"
        android:elevation="2dp"
        android:fontFamily="@font/ubuntu"
        android:text="@string/calistung"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/huruf"

        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/biruMuda"
        android:drawableTop="@drawable/huruf"
        android:elevation="2dp"
        android:fontFamily="@font/ubuntu"
        android:text="@string/huruf"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/menghitung"
        app:layout_constraintEnd_toStartOf="@+id/angka"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/angka"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/biruMuda"
        android:drawableTop="@drawable/angka"
        android:elevation="2dp"
        android:fontFamily="@font/ubuntu"
        android:text="@string/angka"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/menghitung"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/belajar" />

    <Button
        android:id="@+id/menghitung"
        android:layout_width="328dp"
        android:layout_height="160dp"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="111dp"
        android:backgroundTint="@color/biruMuda"
        android:drawableTop="@drawable/menghitung"
        android:elevation="2dp"
        android:fontFamily="@font/ubuntu"
        android:text="@string/menghitung"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>